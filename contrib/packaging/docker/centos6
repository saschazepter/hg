FROM centos:centos6

RUN groupadd -g %GID% build && \
    useradd -u %UID% -g %GID% -s /bin/bash -d /build -m build

RUN yum install -y \
	gcc \
	gettext \
	make \
	python-devel \
	python-docutils \
	rpm-build \
	tar

# For creating repo meta data
RUN yum install -y createrepo

# For python
RUN yum install -y \
	bzip2-devel \
	ncurses-devel \
	openssl-devel \
	readline-devel \
	zlib-devel
