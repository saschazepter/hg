FROM rockylinux/rockylinux:8

RUN groupadd -g %GID% build && \
    useradd -u %UID% -g %GID% -s /bin/bash -d /build -m build

RUN yum install -y \
	gcc \
	gettext \
	make \
	python3-devel \
	python3-docutils \
	rpm-build

# For creating repo meta data
RUN yum install -y createrepo

# For rust extensions
RUN yum install -y cargo
